@model ConestogaCarpool.Models.Post

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="allBodyLeft">
    <div class="transparentBack">
        <h2>Delete</h2>

        <h3>Are you sure you want to delete this post?</h3>
        <div>
            <hr />
            <label class="detailLabels">
                @Html.DisplayNameFor(model => model.Destination):
            </label>
            <label id="textLabels"> @Html.DisplayFor(model => model.Destination)</label>
            <br />

            <label class="detailLabels">
                @Html.DisplayNameFor(model => model.Location):
            </label>
            <label id="textLabels">@Html.DisplayFor(model => model.Location)</label>
            <br />

            <label class="detailLabels">
                @Html.DisplayNameFor(model => model.Date):
            </label>
            <label id="textLabels">@Html.DisplayFor(model => model.Date)</label>
            <br />

            <label class="detailLabels">
                @Html.DisplayNameFor(model => model.Time):
            </label>
            <label id="textLabels">@Html.DisplayFor(model => model.Time)</label>
            <br />

            <label class="detailLabels">
                @Html.DisplayNameFor(model => model.Driver):
            </label>
            <label id="textLabels">@Html.DisplayFor(model => model.Driver.DriverId)</label>
            <br />

            <label class="detailLabels">
                @Html.DisplayNameFor(model => model.PostStatus):
            </label>
            <label id="textLabels">@Html.DisplayFor(model => model.PostStatus.PostStatusDescription)</label>
            <br />

            <label class="detailLabels">
                @Html.DisplayNameFor(model => model.Vehicle):
            </label>
            <label id="textLabels">@Html.DisplayFor(model => model.Vehicle.Make)</label>
            <br />
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="PostId" />
            <input type="submit" value="Delete" id="btnAllShared" />
            <a asp-action="Index" id="btnAllShared">Back to Posts</a>
        </form>
    </div>
</div>
