@model ConestogaCarpool.Models.Post
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="allBodyLeft">
        <h2>Edit Post</h2>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="PostId" />
                    <div class="form-group">
                        <label asp-for="PostStatusId" class="textboxLabel"></label>
                        <select asp-for="PostStatusId" id="textBoxes" asp-items="ViewBag.PostStatusId"></select>
                        <span asp-validation-for="PostStatusId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DriverId" class="textboxLabel"></label>
                        <select asp-for="DriverId" id="textBoxes" asp-items="ViewBag.DriverId"></select>
                        <span asp-validation-for="DriverId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="VehicleId" class="textboxLabel"></label>
                        <select asp-for="VehicleId" id="textBoxes" asp-items="ViewBag.VehicleId"></select>
                        <span asp-validation-for="VehicleId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Destination" class="textboxLabel"></label>
                        <input asp-for="Destination" id="textBoxes" />
                        <span asp-validation-for="Destination" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Location" class="textboxLabel"></label>
                        <input asp-for="Location" id="textBoxes" />
                        <span asp-validation-for="Location" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Date" class="textboxLabel"></label>
                        <input asp-for="Date" id="textBoxes" />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Time" class="textboxLabel"></label>
                        <input asp-for="Time" id="textBoxes" />
                        <span asp-validation-for="Time" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" id="btnAllShared" class="btn btn-default" />
                        <a asp-action="DriverIndex" id="btnAllShared">Back to Posts</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <style>
        .field-validation-error {
            color: #3dd53e;
        }
    </style>