@model ConestogaCarpool.Models.Review

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="allBodyLeft">
    <div class="transparentBack">
        <h2>Delete Review</h2>

        <h3>Are you sure you want to delete this review?</h3>
        <div>
            <hr />
            <label class="detailLabels">
                @Html.DisplayNameFor(model => model.Rating):
            </label>
            <label id="textLabels">@Html.DisplayFor(model => model.Rating)</label>
            <br /><br />

            <label class="detailLabels">
                @Html.DisplayNameFor(model => model.Comment):
            </label>
            <label id="textLabels">@Html.DisplayFor(model => model.Comment)</label>
            <br /><br />

            <label class="detailLabels">
                @Html.DisplayNameFor(model => model.Driver):
            </label>
            <label id="textLabels">@Html.DisplayFor(model => model.Driver.User.Username)</label>
            <br /><br />

            <label class="detailLabels">
                @Html.DisplayNameFor(model => model.Passenger):
            </label>
            <label id="textLabels">@Html.DisplayFor(model => model.Passenger.Email)</label>
            <br /><br />

            <label class="detailLabels">
                @Html.DisplayNameFor(model => model.Ride):
            </label>
            <label id="textLabels">@Html.DisplayFor(model => model.Ride.RideId)</label>
            <br /><br />
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="ReviewId" />
            <input type="submit" value="Delete" id="btnAllShared" />
        </form>
    </div>
</div>
