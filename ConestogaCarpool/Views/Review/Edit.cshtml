@model ConestogaCarpool.Models.Review

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="allBodyLeft">
    <h2>Edit Review</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ReviewId" />
                <div class="form-group">
                    <label asp-for="Rating" class="textboxLabel"></label>
                    <input asp-for="Rating" name="Rating" id="textBoxes" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comment" class="textboxLabel"></label>
                    <input asp-for="Comment" name="Comment" id="textBoxes" />
                    <span asp-validation-for="Comment" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" id="btnAllShared" />
                </div>
            </form>
        </div>
    </div>
</div>