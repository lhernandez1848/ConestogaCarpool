@model ConestogaCarpool.Models.Vehicle

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="allBodyLeft">
    <h2>Edit Vehicle</h2>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="VehicleId" />
                <input type="hidden" asp-for="UserId" />
                <div class="form-group">
                    <label asp-for="Make" class="textboxLabel"></label>
                    <input asp-for="Make" id="textBoxes" />
                    <span asp-validation-for="Make" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Model" class="textboxLabel"></label>
                    <input asp-for="Model" id="textBoxes" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Year" class="textboxLabel"></label>
                    <input asp-for="Year" id="textBoxes" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Colour" class="textboxLabel"></label>
                    <input asp-for="Colour" id="textBoxes" />
                    <span asp-validation-for="Colour" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Plate" class="textboxLabel"></label>
                    <input asp-for="Plate" id="textBoxes" />
                    <span asp-validation-for="Plate" class="text-danger"></span>
                </div>
                <div id="buttonGroup">
                    <input type="submit" value="Save" id="btnAllShared" class="btn btn-default" />
                    <a asp-action="ListVehicles" id="btnAllShared">Back to Vehicles</a>
                </div>
            </form>
        </div>
    </div>
</div>

<style>
    .field-validation-error {
        color: #3dd53e;
    }
</style>