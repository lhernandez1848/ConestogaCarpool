@model ConestogaCarpool.Models.Ride

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="allBodyLeft">
    <div class="transparentBack">
        <h2>Delete</h2>

        <h3>Are you sure you want to delete this?</h3>
        <div>
            <h4>Ride</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Post)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Post.Destination)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.Request)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.Request.RequestId)
                </dd>
                <dt>
                    @Html.DisplayNameFor(model => model.RideStatus)
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.RideStatus.RideStatusDescription)
                </dd>
            </dl>
        </div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="RideId" />
            <input type="submit" value="Delete" id="btnAllShared" />
        </form>
    </div>
</div>
