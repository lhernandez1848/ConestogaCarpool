@{
    ViewData["Title"] = "VerifyEmail";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Conestoga Carpool</title>
    <link rel="stylesheet" href="~/css/SharedLayoutStyle.css" />
    <link rel="stylesheet" href="~/css/UserStyleSheet.css" />
    <link rel="icon" href="~/images/logo.png" type="image/png" sizes="16x20">

</head>

<body>
    <main>
        <div class="allBodyLeft">
            <h2>Verify Email</h2>
            <p class="tempData">@TempData["Message"]</p>
            <br />
            <div class="row">
                <div class="col-md-4">
                    <form asp-action="VerifyEmail">
                        <p>An email was sent to @TempData["VerifyEmail"] with a verification code</p>
                        <div class="form-group">
                            <p>Enter the six digit code that was emailed to you</p>
                            <br />
                            <input name="VerifyCode" id="textBoxes" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Verify" id="btnAllShared" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </main>
    <footer id="footer">
        <p>&copy; 2019 - Conestoga Carpool</p>
    </footer>
</body>
</html>
